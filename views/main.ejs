        }

        @keyframes floating {
            0% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-20px);
            }

            100% {
                transform: translateY(0);
            }
        }

        /* Responsive */
        @media (max-width: 992px) {
            .carousel-caption h1 {
                font-size: 3.5rem;
            }

            .carousel-caption p {
